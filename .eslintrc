{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "extends": ["eslint:recommended", "eslint:standard", "standard-react"],
    "env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"plugins": ["react"]
}